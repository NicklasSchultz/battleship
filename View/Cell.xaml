<UserControl x:Class="Battleship.View.Cell"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ship="clr-namespace:Battleship.View"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid x:Name="cellgrid" >
        <Rectangle x:Name="rectangle" Fill="LightBlue" Stroke="Black" StrokeThickness="0.5" Height="{Binding ElementName=cellgrid, Path=ActualWidth}">
        </Rectangle>
    </Grid>
</UserControl>
