<Window x:Class="Battleship.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Board="clr-namespace:Battleship.Board"
        xmlns:ships="clr-namespace:Battleship.Ships"
        Title="MainWindow">
    <Window.DataContext>
        <Board:MainWindowViewModel/>
    </Window.DataContext>
    <Window.Resources>
        <DataTemplate DataType="{x:Type Board:MainMenuViewModel}">
            <Board:MainMenu/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type Board:ShipMenuViewModel}">
            <Board:ShipMenu/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type Board:BoardViewModel}">
            <Board:Board/>
        </DataTemplate>
    </Window.Resources>
    <DockPanel LastChildFill="True">
        <ContentControl DockPanel.Dock="Right" Content="{Binding Menu}"></ContentControl>
        <ContentControl Content="{Binding Content}"></ContentControl>
    </DockPanel>
</Window>
