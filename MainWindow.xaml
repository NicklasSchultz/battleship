<Window x:Class="Battleship.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Views="clr-namespace:Battleship.View"
        xmlns:ViewModels="clr-namespace:Battleship.ViewModel"
        xmlns:local="clr-namespace:Battleship.View"
        Title="MainWindow"
        Button.Click="HandleChildEvent"
        >
    <Window.DataContext>
        <ViewModels:MainWindowViewModel />
    </Window.DataContext>
    <Window.Resources>
        <DataTemplate DataType="{x:Type ViewModels:MainMenuViewModel}">
            <Views:MainMenu/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type ViewModels:ShipMenuViewModel}">
            <Views:ShipMenu/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type ViewModels:BoardViewModel}">
            <Views:BoardView/>
        </DataTemplate>
    </Window.Resources>
    <DockPanel LastChildFill="True">
        <ContentControl DockPanel.Dock="Right" Content="{Binding Menu}" x:Name="menu"></ContentControl>
         <ContentControl x:Name="Content" Content="{Binding Content}" Width="{Binding ElementName=Content, Path=ActualHeight}"></ContentControl> 
    </DockPanel>
</Window>
